<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include ('partials/head'); -%>
  </head>
  <body>
    <%- include ('partials/navbar'); -%>
    <div class="m-2 p-2">
      <h2>SEARCH RESULTS:</h2>
      <hr />
    </div>
    <% if (pics.length > 0){ if(pics[0].art_id){ %>
    <div class="blogs content">
      <% for(var i = 0; i < pics.length; i++){ %>
      <div class="single">
        <h3 class="title"><%= pics[i].title%></h3>
        <p class="" id="arti"><%= pics[i].article%></p>
        <a
          style="float: right"
          href="/articles/article/<%= pics[i].art_id %>"
          class="btn btn-default"
          >read more</a
        >
      </div>
      <% } %>
    </div>
    <%}else{ %> <%- include('partials/gallery'); -%> <% }} %>
    <div class="container m-5 p-5">
      <% if (pics.length == 0){ %>
      <h1 class="m-5 p-5">NO RESULTS</h1>

      <% } %>
    </div>
    <div class="container m-4 p-4"></div>

    <footer class="footer">
      <%- include ('partials/footer'); -%> <%- include ('partials/script'); -%>
    </footer>
  </body>
</html>
